<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonAttributes">
        <attr name="arc_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ArcHeader" parent="CommonAttributes">
        <attr name="arc_height" />
        <attr name="header_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ArcHeaderGradient" parent="CommonAttributes">
        <attr name="arc_height" />
        <attr name="header_color_start" format="color" />
        <attr name="header_color_end" format="color" />
        <attr name="header_gradient_direction" format="enum">
            <enum name="top_to_bottom" value="0" />
            <enum name="top_left_to_bottom_right" value="1" />
            <enum name="left_to_right" value="2" />
            <enum name="bottom_left_to_top_right" value="3" />
        </attr>
    </declare-styleable>
</resources>